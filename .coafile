[Default]
files = **.py
ignore = **/migrations/**, **/vendor/**, **/node_modules/**
language = python

[python-spacing]
bears = PEP8Bear, PyCommentedCodeBear, PyImportSortBear, PyUnusedCodeBear

[python-analysis]
ignore = **/migrations/**, **/vendor/**, node_modules/**, **/tests.py
bears = LineLengthBear, RadonBear

[json]
bears = JSONFormatBear
files = **.json
indent_size = 4
json_sort = false
ignore = frontend/node_modules/**/*.json

[todos]
files = **.(js|py)
bears = KeywordBear
