[Default]
files = **.py
ignore = **/migrations/**, **/vendor/**, node_modules/**
language = python

[python-spacing]
bears = PEP8Bear, PyCommentedCodeBear, PyImportSortBear, PyUnusedCodeBear

[python-analysis]
ignore = **/migrations/**, **/vendor/**, node_modules/**, **/tests.py
bears = CPDBear, LineLengthBear, RadonBear

[json]
bears = JSONFormatBear
files = **.json
tab_width = 2

[js-analysis]
files = **.js
bears = CPDBear, JSComplexityBear, JSHintBear
prohibit_undefined = False  # Angular, toastr, ...
prohibit_unused = vars

[todos]
files = **.(js|py)
bears = KeywordBear
